<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/back"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="left"
                android:src="@drawable/carpenter1" />

            <TextView
                android:id="@+id/nm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img"
                android:paddingLeft="10dp"
                android:text="Name"
                android:textColor="@color/name"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nm"
                android:layout_toRightOf="@+id/img"
                android:paddingLeft="10dp"
                android:text="amount"
                android:textColor="@color/rating" />

            <TextView
                android:id="@+id/rt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/am"
                android:layout_toRightOf="@+id/img"
                android:paddingLeft="10dp"
                android:text="rating"
                android:textColor="@color/rating" />

            <RatingBar
                android:id="@+id/star"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rt"
                android:layout_toRightOf="@+id/img" />

            <LinearLayout
                android:id="@+id/llayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/star"
                android:layout_toRightOf="@+id/star">

                <!--<ImageButton-->
                    <!--android:id="@+id/img1"-->
                    <!--android:layout_width="60dp"-->
                    <!--android:layout_height="80dp"-->
                    <!--android:layout_alignBottom="@+id/am"-->
                    <!--android:layout_marginLeft="20dp"-->
                    <!--android:layout_marginStart="20dp"-->
                    <!--android:layout_toEndOf="@+id/star"-->
                    <!--android:layout_toRightOf="@+id/star"-->
                    <!--android:layout_weight="1"-->
                    <!--android:padding="5dp"-->
                    <!--android:src="@drawable/phone1"-->
                    <!--android:type="radial" />-->

                <!--<ImageButton-->
                    <!--android:id="@+id/img2"-->
                    <!--android:layout_width="60dp"-->
                    <!--android:layout_height="80dp"-->
                    <!--android:layout_alignTop="@+id/img1"-->
                    <!--android:layout_marginLeft="20dp"-->
                    <!--android:layout_marginStart="20dp"-->
                    <!--android:layout_toEndOf="@+id/img1"-->
                    <!--android:layout_toRightOf="@+id/img1"-->
                    <!--android:layout_weight="1"-->
                    <!--android:padding="5dp"-->
                    <!--android:src="@drawable/messg1" />-->
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
